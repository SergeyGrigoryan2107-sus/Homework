###Задание 1  
from flask import Flask, render_template

app = Flask(__name__)

@app.route('/')
def index():
    lyrics = '"We are the champions, my friends\\nAnd we\\'ll keep on fighting till the end"'
    artist = 'Queen'
    song_title = 'We Are The Champions'
    return render_template('index.html', lyrics=lyrics, artist=artist, song_title=song_title)

if __name__ == '__main__':
    app.run(debug=True)
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Favorite Song Lyric</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            padding-top: 50px;
        }
        h1 {
            color: darkblue;
        }
        pre {
            font-size: large;
            font-style: italic;
        }
    </style>
</head>
<body>
    <h1>{{ artist }}: "{{ song_title }}"</h1>
    <pre>{{ lyrics|safe }}</pre>
</body>
</html>
